<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="22dp">


        <TextView
            android:id="@+id/server_host"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="114dp"
            android:text="Server host"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/server_port"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/server_host"
            android:layout_marginTop="13dp"
            android:text="Server port"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/server_port"
            android:layout_marginTop="13dp"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/password"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="13dp"
            android:text="Password"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/first_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="13dp"
            android:text="First name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/last_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_name"
            android:layout_marginTop="13dp"
            android:text="Last name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_name"
            android:layout_marginTop="13dp"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="13dp"
            android:text="Gender"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_server_host"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="110dp"
            android:layout_toRightOf="@+id/server_host"
            android:text="10.0.2.2"
            android:hint="10.0.2.2" />

        <EditText
            android:id="@+id/edit_server_port"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_server_host"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/server_port"
            android:hint="8080"
            android:text="8080"/>

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_server_port"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/username"
            android:text="sheila"
            android:hint="Username" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_username"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/password"
            android:text="parker"
            android:hint="Password" />

        <EditText
            android:id="@+id/edit_first_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_password"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/first_name"
            android:text="Sheila"
            android:hint="First name" />

        <EditText
            android:id="@+id/edit_last_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_first_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/last_name"
            android:text="Parker"
            android:hint="Last name" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_last_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/email"
            android:text="sheila@parker.com"
            android:hint="Email" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_email"
            android:layout_toRightOf="@+id/gender"
            android:id="@+id/btn_gender"
            android:orientation="vertical">
            <RadioButton android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
            <RadioButton android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="70dp">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="Login"
                android:layout_weight="1.0"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/btn_login"
                android:layout_marginLeft="10dp"
                android:text="Register"
                android:layout_weight="1.0"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>